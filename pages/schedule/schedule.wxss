.schedule{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-image: url("../assets/img/bg.jpg");
  padding-top: 30rpx;
}
.title2{
  border-radius: 3px;
  text-align: center;
  width: 720rpx;
  height: 60rpx;
  line-height: 60rpx;

}
.content1{
  background-color: #fff;
  border-radius: 3px;
  text-align: center;
  width: 720rpx;
  height: 60rpx;
  line-height: 100rpx;
  margin-bottom: 30rpx;

}
.text{
  border-radius: 3px;
  text-align: center;
  width: 720rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.button{
  display: flex;
  flex-direction: row; 
  text-align: right;
}
.item{
  width: 100rpx;
  min-height: 80rpx;
  margin: 10rpx;
  text-shadow: 0 1px 1px rgba(0,0,0,.3);
  border-radius: 5px;
  text-align: center;
  line-height: 80rpx;
}
.orange{
  color: #000;
  border: solid 1px #da7c0c;
  background: #f78d1d;
}
.submit{
  color: #000;
  border: solid 1px #da7c0c;
  background: #8f0;
}
.content2{
  background-color: #fff;
  border-radius: 3px;
  text-align: left;
  width: 720rpx;
  height: 270rpx;
  line-height: 100rpx;
  margin-bottom: 150rpx;

}
.checkbox{
  background-color: #fff;
  border-radius: 3px;
  text-align: left;
  width: 720rpx;
  height: 270rpx;
  display: flex;
  flex-direction: row;
  align-items: left;
  box-sizing: border-box;
}
